{
  "name": "wordpress-export-theme",
  "version": "1.0.0",
  "description": "Modern WordPress theme for export business with Tailwind CSS and shadcn/ui",
  "scripts": {
    "dev": "npm run build:css -- --watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./assets/css/src/main.css -o ./assets/css/main.css",
    "build:js": "esbuild assets/js/src/main.js --bundle --outfile=assets/js/main.js --minify"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.19.11",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-navigation-menu": "^1.1.4",
    "@radix-ui/react-tabs": "^1.0.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.303.0",
    "tailwind-merge": "^2.2.0"
  }
}